% dX(3) = rem(theta_dot,2*pi);
dX(4) = (-u*cos(theta) - mp*l*theta_dot^2*cos(theta)*sin(theta)...
    -(mc+mp)*g*sin(theta))/(mc+mp*sin(theta)^2);
% if(isnan(dX(1)))
